{% extends "/app/Resources/views/base.html.twig" %}

{% block title %} {{ title }} {% endblock %}

{% block stylesheets %}
	
	<link rel="stylesheet" href="/demoBundle/assets/css/demo.css" />

	{% stylesheets  output="/demoBundle/assets/css/layout.css" filter="?uglifycss" 
	    "/frameworkBundle/vendors/dataTable/css/dataTables.bootstrap.min.css"
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

	
{% endblock %}

{% block javascripts %}
	
	{{ parent() }}

	<!-- WEBPACK BUNDLE -->
	<script src="/demoBundle/assets/js/demo.js"></script>

	{% javascripts output='/demoBundle/assets/js/layout.js' filter='?uglifyjs2'
		"/frameworkBundle/vendors/dataTable/js/jquery.dataTables.js"
		"/frameworkBundle/vendors/dataTable/js/dataTables.bootstrap.js"
	%}
		<script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
	
	<script>
		/* ---------------------------------------------- /*
		 * LANG IN URL CHANGE
		/* ---------------------------------------------- */
		$("#langs").bind("change",function(){
			window.location.href = "?lang="+$(this).val();
		})
	</script>
{% endblock %}

{% block body %}
	
	<header class="header">
		{{ render( controller("demoBundle:demo:nav", login )) }}
	</header>

{% endblock %}

{% block footer %}
	<footer  >
		{{ render( controller("demoBundle:demo:footer" )) }}
	</footer>
{% endblock %}

