{% extends "/src/experimental/webRtcBundle/Resources/views/layouts/layout.html.twig" %}

{{trans_default_domain("webrtc")}}

{% block stylesheets %}

	<link href="/webRtcBundle/clean/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
	<link href="/webRtcBundle/clean/assets/css/font-awesome.min.css" rel="stylesheet" media="screen">
	<link href="/webRtcBundle/clean/assets/css/simple-line-icons.css" rel="stylesheet" media="screen">
	<link href="/webRtcBundle/clean/assets/css/animate.css" rel="stylesheet">

	<!-- Custom styles CSS -->
	<link href="/webRtcBundle/clean/assets/css/style.css" rel="stylesheet" media="screen">

	<style>
		html,body {
			height:100%;
		}



		.container,.panel {
			height:100%;
		}
		.icon{
			margin: 0 0 15px;
			font-size: 32px;
			color: #222;
		}
		.icon-realtime{
			width:30px;
			height:30px;
			background-image:url("/webRtcBundle/images/fanout_icon.png");	
		}
		

	</style>
	
{% endblock %}




{% block body %}


<!-- Preloader -->

<div id="preloader">
	<div id="status"></div>
</div>

<!-- Home start -->

<section id="home" class="pfblock-image screen-height">
        <div class="home-overlay"></div>
	<div class="intro">
		<div class="start"> {{ "welcome"|trans() }} {{login}}</div>
		<h1 class="success"> <strong class="text-primary">WEBRTC </strong> {{ "webrtc"|trans() }}  </h1>
		<div class="start">  {{ "webrtcWelcome"|trans() }}  </div>
	</div>

        <a href="#services">
		<div class="scroll-down">
            		<span>
                		<i class="fa fa-angle-down fa-2x"></i>
            		</span>
		</div>
        </a>

</section>


<!-- Home end -->

<!-- Navigation start -->

<header class="header">

	{{render( controller('webRtcBundle:default:nav', login) )}}

</header>
<!-- Navigation end -->

<!-- Services start -->

<section id="services" class="pfblock pfblock-gray">
	<div class="container">
		<div class="row">

			<div class="col-sm-6 col-sm-offset-3">

				<div class="pfblock-header wow fadeInUp">
					<h2 class="pfblock-title">WEBRTC</h2>
					<div class="pfblock-line"></div>
					<div class="pfblock-subtitle">
						DEMO WEBRTC with NODEFONY FRAMENWORK 
					</div>
				</div>

			</div>

		</div>

		<div class="row">

			<div class="col-sm-3">

				<div class="iconbox wow slideInLeft">
					<div class="icon">
						<span class="icon-realtime"></span>
					</div>
					<div class="iconbox-text">
						<h3 class="iconbox-title">REALTIME APPLICATION</h3>
						<div class="iconbox-desc">
							Application VIDEO with 
							NODEFONY realtime bundle 	
						</div>
					</div>
				</div>

			</div>

			<div class="col-sm-3">

				<div class="iconbox wow slideInLeft">
					<div class="iconbox-icon">
						<span class="icon-puzzle"></span>
					</div>
					<div class="iconbox-text">
						<h3 class="iconbox-title">SIP PROTOCOL</h3>
						<div class="iconbox-desc">
							
						</div>
					</div>
				</div>

			</div>

			<div class="col-sm-3">

				<div class="iconbox wow slideInRight">
					<div class="iconbox-icon">
						<span class="icon-badge"></span>
					</div>
					<div class="iconbox-text">
						<h3 class="iconbox-title">WEB AUDIO API</h3>
						<div class="iconbox-desc">
							Good things come to those who wait, but only the things left by those who hustle
						</div>
					</div>
				</div>

			</div>

			<div class="col-sm-3">

				<div class="iconbox wow slideInRight">
					<div class="iconbox-icon">
						<span class="icon-question"></span>
					</div>
					<div class="iconbox-text">
						<h3 class="iconbox-title">WEBRTC API</h3>
						<div class="iconbox-desc">
							Good things come to those who wait, but only the things left by those who hustle
						</div>
					</div>
				</div>

			</div>

		</div><!-- .row -->
	</div><!-- .container -->
</section>

<!-- Services end -->



<section id="demo" class=" calltoaction" >

	<div class="container">

		<div id="containerStart" class="row">

			<div class="col-md-12 col-lg-12">
				<h2 style="visibility: visible; animation-delay: 0.1s; animation-name: slideInRight;" class="wow slideInRight animated" data-wow-delay=".1s">ARE YOU READY TO START?</h2>
				<div style="visibility: visible; animation-delay: 0.2s; animation-name: slideInRight;" class="calltoaction-decription wow slideInRight animated" data-wow-delay=".2s">
					WEBRTC DEMO .
				</div>
			</div>

			<div style="visibility: visible; animation-delay: 0.3s; animation-name: slideInRight;" class="col-md-12 col-lg-12 calltoaction-btn wow slideInRight animated" data-wow-delay=".3s">
				<a  id="startDemo" class="btn btn-lg">CONNECT WEBRTC</a>
			</div>

		</div><!-- .row -->


		<div id="containerDemo" class="container" style="display:none">
			{% include '/src/experimental/webRtcBundle/Resources/views/partialWebRtc.html.twig' with {'username': username, 'url':url, 'login':login} %}
		</div><!-- .row -->
	</div><!-- .container -->

</section>


<section id="doc" class="pfblock pfblock-gray">

	<div class="container">
		<div class="row">

			<div class="col-sm-12">
			</div>

		</div><!-- .row -->
		<div class="row">

			<div class="col-sm-12">
				
			</div>

		</div><!-- .row -->

	</div>
</section>



<footer id="footer">
	<div class="container">
		<div class="row">

			<div class="col-sm-12">

			
                    		<p class="copyright">
					<span class="fa fa-th fa-2x animated pulse"></span>	
					Â© 2015   Generate with {{ nodefony }}  
				</p>

			</div>

		</div><!-- .row -->
	</div><!-- .container -->
</footer>


<!-- Scroll to top -->

<div class="scroll-up">
	<a href="#home"><i class="fa fa-angle-up"></i></a>
</div>



{% endblock %}




