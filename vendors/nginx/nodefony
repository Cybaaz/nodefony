map $http_upgrade $connection_upgrade {
        default upgrade;
        ''      close;
}

server {
    return 404;
}



server {
    listen              80;
    listen              443 ssl;
    server_name         www.nodefony.com;

    ssl_certificate  /nodefony/config/certificates/nodefony.com/fullchain.pem;
    ssl_certificate_key /nodefony/config/certificates/nodefony.com/privkey.pem;
    ssl_trusted_certificate /nodefony/config/certificates/nodefony.com/fullchain.pem;

    return 301 $scheme://nodefony.com$request_uri;
}

server {
        listen 80;

        server_name nodefony.com;

        #add_header X-Frame-Options "SAMEORIGIN";

        set  $via  "1.0 nodefony nginx front";
        if ($http_via) {
                set $via  "$http_via, 1.0 nodefony nginx front";
        }


        location / {
                root /nodefony/web ;
                proxy_pass http://nodefony.com:5151;
                proxy_http_version 1.1;
                proxy_pass_header Server;

                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection $connection_upgrade;
                proxy_set_header Host $host;
                proxy_set_header X-Forwarded-Proto $scheme;
                proxy_set_header X-Forwarded-Port $proxy_port;
                proxy_set_header X-Forwarded-Host $host;
                proxy_set_header X-Forwarded-Server $host;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header  Via  $via;

                proxy_cache_bypass $http_upgrade;
        }


        location ~ \.(js|css|png|ico|jpg|gif|ttf|font|map|woff.?|twig|txt|html|xml)$ {
                access_log off;
                root /nodefony/web;
                expires 7d;
        }
}

server {
        listen       443 ssl;


        server_name nodefony.com "";

        ssl_certificate  /nodefony/config/certificates/nodefony.fr/fullchain.pem;
        ssl_certificate_key /nodefony/config/certificates/nodefony.fr/privkey.pem;
        ssl_trusted_certificate /nodefony/config/certificates/nodefony.fr/fullchain.pem;

        #add_header X-Frame-Options "SAMEORIGIN";

        set  $via  "1.0 nodefony nginx front";
        if ($http_via) {
                set $via  "$http_via, 1.0 nodefony nginx front";
        }

        location / {
                root /nodefony/web ;
                proxy_pass https://nodefony.com:5152;
                proxy_http_version 1.1;
                proxy_pass_header Server;

                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection $connection_upgrade;

                proxy_set_header Host $host;
                proxy_set_header X-Forwarded-Proto $scheme;
                proxy_set_header X-Forwarded-Port 443  ;
                proxy_set_header X-Forwarded-Host $host;
                proxy_set_header X-Forwarded-Server $host;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header  Via  $via;

                proxy_cache_bypass $http_upgrade;
        }

        location ~ \.(js|css|png|ico|jpg|gif|ttf|font|map|woff.?|twig|txt|html|xml)$ {
                root /nodefony/web;
                expires 7d;
                access_log off;
        }
}

